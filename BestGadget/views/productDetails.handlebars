<body>
{{# if products }}	
	<div class="container">
		<div class="card">
			<div class="container-fliud">
				<div class="wrapper row">
					<div class="preview col-md-6">
						
						<div class="preview-pic tab-content zoom">
						  <div class="tab-pane active" id="{{products.id}}"><img src="/{{ products.imagepath}}" /></div>
						</div>						
					</div>
					<div class="details col-md-6">
						<h3 class="product-title">{{products.title}}</h3>
						<p class="product-description">{{products.description }}</p>
						<h4 class="price">current price: <span>${{products.price}}</span></h4>
						<div class="rating">
							<div class="stars">
								  {{#times products.productRating}}
									<span class="fa fa-star checked"></span>
									{{/times}}
									{{#ntimes products.productRating}}
									<span class="fa fa-star"></span>
									{{/ntimes}}
							</div>
						</div>
						<h5 class="sizes">Quantity:
                           <div class="dropdown" style="display: inline-block"> 
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Select</button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">1</a>
                                        <a class="dropdown-item" href="#">2</a>
                                        <a class="dropdown-item" href="#">3</a>
                                    </div>
                                </div>
                           </h5>
						<div class="action">
							 <a href="/add-to-cart/{{products.id}}/true" class="btn btn-success">Add to cart</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{{/if}}
  </body>